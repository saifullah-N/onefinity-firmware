script#default-config(type="text/x-template")
  #admin-general
      style. 
        .enabled{color:white ; background-color:#6F8DF5 ; font-size:20px; font-family:sans-serif ; padding:15px 40px ; border-radius:8%;text-decoration: none;margin:0 4vw;}
        .disabled{color:white ; background-color:#b0b0b0; font-size:20px; font-family:sans-serif ; padding:15px 40px ; border-radius:8%;text-decoration: none;margin:0 4vw;}
      div(style="text-align:center")   
          //- message(:show.sync="confirmReset")
          h1 Setup Config 
          p(slot="body") Non-network configuration changes will be lost.
          h2 Select defaults:
          div(style="display:inline-block; text-align:justify")
          
            div(style="padding:15px")
              input#tab1(type="radio", name="reset_variant" @click="reset_variant = 'woodworker_x35'")
              label(for="tab1", title="Woodworker X-35",style="font-size:25px") Woodworker X-35
            div(style="padding:15px")
              input#tab2(type="radio", name="reset_variant" @click="reset_variant = 'machinist_x35'")
              label(for="tab2", title="Machinist X-35",style="font-size:25px") Machinist X-35
            div(style="padding:15px")
              input#tab3(type="radio", name="reset_variant" @click="reset_variant = 'woodworker_x50'")
              label(for="tab3", title="Woodworker X-50",style="font-size:25px") Woodworker X-50
            div(style="padding:15px")
              input#tab4(type="radio", name="reset_variant" @click="reset_variant = 'journeyman_x50'")
              label(for="tab4", title="Journeyman X-50",style="font-size:25px") Journeyman X-50
          div(style='display:flex; justify-content: space-evenly; ')
            button( class="enabled" @click="previous") previous
            button( :class="reset_variant?'enabled':'disabled'", @click="reset" :disabled="!reset_variant") next

