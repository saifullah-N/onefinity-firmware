            div(style="padding:15px")
              input#tab4(type="radio", name="reset_variant" @click="reset_variant = 'journeyman_x50'")
              label(for="tab4", title="Journeyman X-50",style="font-size:25px") Journeyman X-50
          //- div(slot="footer")
