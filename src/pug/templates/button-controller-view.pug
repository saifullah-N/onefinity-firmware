script#button-controller-view(type="text/x-template")
  #btn-check
      div(style="text-align:center")   
          //- message(:show.sync="confirmReset")
          h1(slot="header") Set button Type 
          h3(slot="body") Select defaults:
          div(style="display:flex;flex-direction:column;justify-content:space-between")
            div 
                input#tab1(type="radio", style="font-size:25px" name="button_type" @click="button_type = 'push'")
                label(for="tab1", title="Push button",style="font-size:25px") Push button 
            div
                input#tab2(type="radio", name="button_type" @click="button_type = 'rock'",style="font-size:25px")
                label(for="tab2", title="Rocker button",style="font-size:25px") Rocker button

          div(slot="footer" style='display:flex; justify-content: space-around; width="100px" ')
            button.pure-button(@click="confirmReset = false") Cancel
            button.pure-button.pure-button-primary(@click="reset") set
